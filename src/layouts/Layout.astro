---
import '../styles/global.css';
import Nav from '../components/molecules/Nav';
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>Weather App</title>
	</head>
	<body class='h-screen w-screen bg-[var(--background)] pt-4 flex flex-col items-center'>
		<Nav client:load />

		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
